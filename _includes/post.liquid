<div class="post">
    <h2><a href="{{site.baseurl}}{{ post.url }}">{{ post.title }}</a></h2>
    <div class="date">
        posted on <span class="date">{{ post.date | date_to_long_string }}</span>
    </div>
    <div class="tags">
        tagged as
        {% for t in post.tags %}
            <a href="{{site.baseurl}}/tags/{{t}}">{{ t }}</a>{% if forloop.last == false %}, {% endif %}
        {% endfor %}
    </div>

    <div class="postbody" style="clear:both">
        {{ content }}
    </div>
</div>

